<%- include('./includes/header'); %>
    <section class="wraper">
        <div class="box">
             <% if (locals.message) {
                %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%=message.error%>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <%
                }%>  
            <h1 class="boxtitle">Send Password Reset Link To Mail</h1>
            <form action="/" method="post" id="signinform">
                <div class="form-group">
                    <lable for="email">Your Email</lable>
                    <input type="email" name="email" id="email" class="form-control" placeholder="abc@localhost.com">
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Send E-mail" class="btn btn-primary btn-lg">
                </div>
            </form>
        
        </div>
    </section>
<%- include('./includes/footer'); %>