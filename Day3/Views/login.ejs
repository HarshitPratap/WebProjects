<%- include('./includes/header'); %>
    <section class="wraper">
        <div class="box">
            <% if (message.error) {
                %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%=message.error%>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <%
                }%> 
            <h1 class="boxtitle">SIGNIN</h1>
            <form action="/auth/login" method="post" id="signinform">
                <div class="form-group">
                    <lable for="email">Email</lable>
                    <input type="email" name="email" id="email" class="form-control" placeholder="abc@localhost.com">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="*******">
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="SIGNIN" class="btn btn-primary btn-lg">
                </div>
            </form>
            <div class="form-footer mt-4">
                <a href="/auth/forgotpassword">Forgot password?</a>
                <a href="/auth/register">Don't have an account?</a>
            </div>
        </div>
    </section>
